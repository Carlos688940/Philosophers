NAME	= philo

# ============================================================================ #
# FILES                                                                        #
# ============================================================================ #

SRC	=$(addprefix $(SRC_DIR)/main.c)

OBJS	=$(addprefix $(BUILD_DIR)/, .....)
# ============================================================================ #
# PATHS                                                                        #
# ============================================================================ #

SRC_DIR		= src

BUILD_DIR	= .build

# ============================================================================ #
# COMPILER, FLAGS & COMMANDS                                                   #
# ============================================================================ #
CC	= cc
CFLAGS	=  -Wall -Wextra -Werror
CFLAGS	+= -g

MAKE	= make -C

RM	= rm -rf
MKDIR	= mkdir -p

# ============================================================================ #
# RULES                                                                        #
# ============================================================================ #

all: $(NAME)

$(NAME): $(BUILD_DIR)

$(BUILD_DIR):
	$(MKDIR) $(BUILD_DIR)
	@printf "$(GRN)>> Created .build/ directory for object files$(NC)\n\n"

##@ CLEAN-UP RULES

clean:	## Remove object files
	$(RM) $(BUILD_DIR)

fclean: clean	## Remove executable files
	$(RM) $(NAME)

re: fclean all	## Purge and recompile

# ============================================================================ #
# UTILS: SHELL FORMATTING                                                      #
# ============================================================================ #

# Reset to default
NC = \033[0m

# Regular text colors
RED = \033[0;31m
GRN = \033[0;32m
YEL = \033[0;33m
BLU = \033[0;34m
MAG = \033[0;35m
CYA = \033[0;36m
WHI = \033[0;37m

# Bold text colors
RED_B = \033[1;31m
GRN_B = \033[1;32m
YEL_B = \033[1;33m
BLU_B = \033[1;34m
MAG_B = \033[1;35m
CYA_B = \033[1;36m
WHI_B = \033[1;37m